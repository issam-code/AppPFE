<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TableLayout
        android:id="@+id/tableLayout2"
        android:background="@color/white"
        android:layout_width="390dp"
        android:layout_height="655dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tabled21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textgr"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:background="#C6618BA3"
                android:text="   GOUPES"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#EDEEF5" />

        </TableRow>

        <TableRow
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listgroup"
                android:layout_width="match_parent"
                android:layout_height="566dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                tools:ignore="MissingConstraints">

            </ListView>

        </TableRow>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tbro3112"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="7"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">


            <Button
                android:id="@+id/creergr"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/en"
                android:onClick="creergroupe"
                android:text="Creer"
                android:textColor="#A63B6D67"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.444"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/groupcr"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:background="#A3EEEBEB"
                android:ems="10"
                android:hint=" Nom groupe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/add"
                app:layout_constraintHorizontal_bias="0.615"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.473"
                android:layout_marginLeft="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>