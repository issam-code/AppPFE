<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout2"
    android:layout_width="402dp"
    android:layout_height="714dp"
    android:background="@color/white"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TableRow
        android:id="@+id/tabled21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/texdoce"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:background="#C6618BA3"
            android:text="   DOCUMENTS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#EDEEF5" />

    </TableRow>

    <TableRow
        android:id="@+id/tabd2v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/search1"
            android:layout_width="360dp"
            android:layout_height="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#9FF3EBE9"
            android:ems="10"
            android:hint=" Rechercher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="NotSibling" />

    </TableRow>
    <TableRow
        android:id="@+id/tabd21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listdoc1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

        </ListView>

    </TableRow>



</TableLayout>